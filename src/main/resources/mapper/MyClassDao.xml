<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdl.demo.dao.MyClassDao">
    <select id="queryClassById" resultType="com.cdl.demo.domain.MyClass">
        SELECT class_id, class_name, class_intro
        FROM class
        WHERE class_id=#{classId}
    </select>
</mapper>